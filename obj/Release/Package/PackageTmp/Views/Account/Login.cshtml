@using MontazneKuce.Models
@model LoginViewModel
@{
    ViewBag.Title = "Logovanje";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
            <form action="/Account/Login" class="form-horizontal" method="post" role="form">
                @Html.AntiForgeryToken();

                <div class="form-group">
                    <label class="col-md-2 control-label" for="KorisnickoIme">Korisnicko ime</label>
                    <div class="col-md-10">
                        <input class="form-control" data-val="true" data-val-required="Morate uneti korisnicko ime" id="KorisnickoIme" name="KorisnickoIme" type="text" value="@Model.KorisnickoIme" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="KorisnickoIme" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="Lozinka">Lozinka</label>
                    <div class="col-md-10">
                        <input class="form-control" data-val="true" data-val-required="Morate uneti lozinku" id="Lozinka" name="Lozinka" type="password" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="Lozinka" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input data-val="true" id="ZapamtiMe" name="ZapamtiMe" type="checkbox" value="true" /><input name="ZapamtiMe" type="hidden" value="false" />
                            <label for="ZapamtiMe">Zapamti me?</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Uloguj se" class="btn btn-default" />
                    </div>
                </div>

                <p>
                    <a href="/Account/Register">Registruj se kao novi korisnik</a>
                </p>
            </form>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {
            $("#KorisnickoIme").focus();
        });
    </script>
}