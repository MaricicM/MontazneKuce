@model MontazneKuce.Models.Tema

@{
    ViewBag.Title = "Nova Tema";
}

<h2>Nova Tema</h2>


<form action="/Blog/NovaTema" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label col-md-2" for="Naziv">Naziv</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-length="Naziv ne sme sadrzati vise od 300 karaktera." data-val-length-max="300" data-val-required="Unesite naziv teme." id="Naziv" name="Naziv" type="text" value="" />
                <span class="field-validation-valid text-danger" data-valmsg-for="Naziv" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Otvori temu" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    <a href="/Blog">Spisak otvorenih tema</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
